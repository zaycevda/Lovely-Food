<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationActiveTextStyle">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationInactiveTextStyle">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/gray_70</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ToolbarTitleTextStyle">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarSubtitleTextStyle">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/black_alpha50</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CategoryTitleTextStyle">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TagStyle">
        <item name="android:background">@drawable/bg_tag</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProductCornerStyle">
        <item name="cornerFamily">?attr/shapeCornerFamily</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ProductTextStyle">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>